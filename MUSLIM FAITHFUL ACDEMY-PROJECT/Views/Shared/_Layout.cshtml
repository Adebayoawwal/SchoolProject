<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MUSLIM_FAITHFUL_ACDEMY_PROJECT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MUSLIM_FAITHFUL_ACDEMY_PROJECT.styles.css" asp-append-version="true" />
</head>
<body>

<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor02">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Student" asp-action="StudentView"> Student-Communication-view</a>
                    </li>
        <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Student" asp-action="StudentView">Registration for Student</a>
                    </li>
        <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="Index" aria-expanded="false">Student</a>

        </li>
        <li class="nav-item">
                        <a class="nav-link" asp-controller="Teachermodel" asp-action="Add" aria-expanded="false">Registration for Teachers</a>
        </li>
        <li class="nav-item">
                        <a class="nav-link" asp-controller="Teachermodel" asp-action="Index" aria-expanded="false">Teacher</a>
           </li>
        </ul>
      <form class="d-flex">
        <input class="form-control me-sm-2" type="search" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>

    <div class="container">
        <main role="main" class="p-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
